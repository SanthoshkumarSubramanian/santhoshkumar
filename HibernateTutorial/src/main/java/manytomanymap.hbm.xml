<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.infy.manytomany.mapping.Question" table="manytomanymapquestion">
		<id name="id">
			<generator class="native"></generator>
		</id>
		<property name="name"></property>

		<map name="answers" table="manytomanymapanswer" cascade="all">
			<key column="qid"></key>
			<index column="answer" type="string"></index>
			<many-to-many class="com.infy.manytomany.mapping.User"
				column="userid" />
		</map>

	</class>
	
	<class name="com.infy.manytomany.mapping.User" table="manytomanymapuser">
		<id name="id">
			<generator class="native"></generator>
		</id>
		<property name="username"></property>
		<property name="email"></property>
		<property name="country"></property>
	</class>

</hibernate-mapping>  